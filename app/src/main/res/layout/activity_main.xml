<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/imageViewOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/viewKonfetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/buttonCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:alpha="0.5"
        android:text="Camera" />

    <Button
        android:id="@+id/buttonBackGr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonCamera"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:alpha="0.5"
        android:text="Backgr" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonBackGr"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:alpha="0.5"
        android:text="Start" />

    <TableLayout
        android:id="@+id/layout_levels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonStart"
        android:layout_alignParentEnd="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/button3"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:text="3" />

            <Button
                android:id="@+id/button4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:text="4" />

            <Button
                android:id="@+id/button5"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:text="5" />
            />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/button0"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:text="0" />

        <Button
            android:id="@+id/button1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:text="2" />
            />
        </TableRow>

    </TableLayout>


    <TextView
        android:id="@+id/textViewDebug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorAccent"
        android:text="Debug info:" />

    <TextView
        android:id="@+id/textViewLevel"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/textview_style"
        android:gravity="center_vertical|center_horizontal"
        android:text="Level"
        android:textColor="@color/lightgray"
        android:textSize="30dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textViewResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/textview_style"
        android:padding ="20dp"
        android:textColor="@color/lightgray"
        android:textSize="20dp"
        android:visibility="gone"
 />

</RelativeLayout>
